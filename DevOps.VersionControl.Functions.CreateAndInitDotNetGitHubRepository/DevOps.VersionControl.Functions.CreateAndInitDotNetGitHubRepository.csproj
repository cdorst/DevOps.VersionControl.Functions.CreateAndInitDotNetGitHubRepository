<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <LangVersion>latest</LangVersion>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <PropertyGroup>
    <Authors>cdorst</Authors>
    <Description>Helper for creating a new GitHub repository and initializing it with a GNU GPL 3.0 LICENSE and .gitattributes/.gitignore files for .NET solutions</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>CDorst.DevOps.VersionControl.Functions.CreateAndInitDotNetGitHubRepository</PackageId>
    <Version>1.0.1</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CDorst.DevOps.VersionControl.Functions.CreateGitHubRepository" Version="1.0.0" />
    <PackageReference Include="CDorst.DevOps.VersionControl.Functions.GetGitHubRepoRemoteUri" Version="2.0.0" />
    <PackageReference Include="CDorst.DevOps.VersionControl.Functions.InitializeDotNetGnuGitRepository" Version="1.0.0" />
  </ItemGroup>

</Project>
